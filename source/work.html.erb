<div class="container work">
  <div class="row">
    <div class="col-md-5">
      <img class="img-fluid" src="/images/musee/<%= path %>.jpg" alt="<%= work.title %>">
    </div>
    <div class="offset-md-1 col-md-6">
      <h1><%= work.title %></h1>
      <p><%= work.author %>, <%= work.place %></p>
      <p>Audiodescription</p>
      <audio controls autoplay>
        <source src="/audios/<%= path %>.mp3" type="audio/mpeg">
      </audio>
    </div>
  </div>
</div>
