<div class="container mt-5">
  <div class="row">
    <div class="col-md-4">
      <img class="img-fluid" src="/images/<%= path %>.jpg" alt="<%= work.title %>">
    </div>
    <div class="offset-md-1 col-md-6">
      <h1><%= work.title %></h1>
      <h2>Auteur: <%= work.author %></h2>
      <h2>Lieu: <%= work.place %></h2>
      <div class="audio_container">
        <h3>Audiodescription :</h3>
        <audio controls autoplay>
          <source src="audios/<%= path %>.mp3" type="audio/mpeg">
          </audio>
        </div>
    </div>
  </div>
</div>
